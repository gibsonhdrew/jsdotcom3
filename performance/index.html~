        var slide1=false;
        var slide2=false;

        $('.slideTarget1').click(function() {
            if (slide1==false){
                $('.slideTable1').slideDown({duration: 400});
                $('.slideExpand1Inner').text('collapse');
                slide1=true;
            } else {
                $('.slideTable1').slideUp({duration: 400});
                $('.slideExpand1Inner').text('expand');
                slide1=false;
            }
        })

        $('.slideTarget2').click(function() {
            if (slide2==false){
                $('.slideTable2').slideDown({duration: 400});
                $('.slideExpand2Inner').text('collapse');
                slide2=true;
            } else {
                $('.slideTable2').slideUp({duration: 400});
                $('.slideExpand2Inner').text('collapse');
                slide2=false;
            }
        })

        // refactor this

        var slideIndex = [];

        for (i = 0; i < 4; i++) {
            slideIndex[i] = 1;
        }

        showDivs0(slideIndex[0]);
        showDivs1(slideIndex[1]);
        showDivs2(slideIndex[2]);
        showDivs3(slideIndex[3]);

        function plusDivs0(n) {
            showDivs0(slideIndex[0] += n);
        }

        function plusDivs1(n) {
            showDivs1(slideIndex[1] += n);
        }

        function plusDivs2(n) {
            showDivs2(slideIndex[2] += n);
        }

        function plusDivs3(n) {
            showDivs3(slideIndex[3] += n);
        }

        function showDivs0(n) {
            var q;
            var x = document.getElementsByClassName("mySlides0");
            if (n > x.length) {slideIndex[0] = 1}
            if (n < 1) {slideIndex[0] = x.length} ;
            for (q = 0; q < x.length; q++) {
                x[q].style.display = "none";
            }
            x[slideIndex[0]-1].style.display = "block";
        }

        function showDivs1(n) {
            var i;
            var x = document.getElementsByClassName("mySlides1");
            if (n > x.length) {slideIndex[1] = 1}
            if (n < 1) {slideIndex[1] = x.length} ;
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            x[slideIndex[1]-1].style.display = "block";
        }

        function showDivs2(n) {
            var i;
            var x = document.getElementsByClassName("mySlides2");
            if (n > x.length) {slideIndex[2] = 1}
            if (n < 1) {slideIndex[2] = x.length} ;
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            x[slideIndex[2]-1].style.display = "block";
        }

        function showDivs3(n) {
            var i;
            var x = document.getElementsByClassName("mySlides3");
            if (n > x.length) {slideIndex[3] = 1}
            if (n < 1) {slideIndex[3] = x.length} ;
            for (i = 0; i < x.length; i++) {
                x[i].style.display = "none";
            }
            x[slideIndex[3]-1].style.display = "block";
        }
